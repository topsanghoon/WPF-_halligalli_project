<Window x:Class="halligalli_client.NameInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="이름 입력" Height="150" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="사용자 이름을 입력하세요:" Margin="0,0,0,5" />
            <TextBox Name="NameTextBox" Margin="0,0,0,10"/>
            <Button Content="확인" Click="Confirm_Click" HorizontalAlignment="Center" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
