<Window x:Class="halligalli_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" Height="700" Width="900"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}">

    <Window.Resources>
        <sys:Double x:Key="CardText">60</sys:Double>
        <sys:Double x:Key="CardSize_W">40</sys:Double>
        <sys:Double x:Key="CardSize_H">60</sys:Double>
        <sys:Double x:Key="FontSizeSmall">12</sys:Double>
    </Window.Resources>

    <!-- 최상위 RootGrid: 배경 + 레이어 2개 -->
    <Grid x:Name="RootGrid">
        <!-- 배경 이미지 -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://siteoforigin:,,,/Assets/table_background.jpg" />
        </Grid.Background>

        <!-- 게임 UI 그리드 -->
        <Grid x:Name="GameUIGrid" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="110"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="110"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            


            <StackPanel x:Name="Player1StackPanel" Grid.Row="0" Grid.Column="2" Orientation="Vertical"
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <StackPanel x:Name="Player2StackPanel" Grid.Row="2" Grid.Column="0" Orientation="Vertical"
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <StackPanel x:Name="Player3StackPanel" Grid.Row="2" Grid.Column="4" Orientation="Vertical"
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <StackPanel x:Name="Player4StackPanel" Grid.Row="4" Grid.Column="2" Orientation="Vertical"
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>



            <!-- 종 이미지 -->
            <Image x:Name="BellImage" Grid.Row="2" Grid.Column="2" Width="60" Height="60" 
                   Source="pack://siteoforigin:,,,/Assets/Bell.png"/>

            <!-- 턴 알림 버튼 -->
            <Button x:Name="Turn_Alram_Button" Grid.Row="4" Grid.Column="0" FontSize="{StaticResource FontSizeSmall}" Foreground="White"
                    Background="Gray" BorderBrush="Transparent"
                    Width="700" Height="30" Focusable="False"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Content="나의 턴"
                    Padding="5" Click="turn_Button_Click" IsEnabled = "False" Opacity = "0.8"/>

            <Button x:Name="GameStart_Button" Grid.Row="4" Grid.Column="4" FontSize="{StaticResource FontSizeSmall}" Foreground="White"
                    Background="Gray" BorderBrush="Transparent"
                    Width="700" Height="30"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Content="게임시작"
                    Padding="5" Click="GameStart_Click" />
            
        </Grid>

        <!-- 오버레이 메시지 (승리, 패배 등 표시용) -->
        <Grid x:Name="OverlayGrid"
              Background="Transparent"
              IsHitTestVisible="False"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch" />
    </Grid>
</Window>

    